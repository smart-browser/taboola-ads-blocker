{
  "manifest_version": 3,
  "name": "Taboola Ads Blocker",
  "version": "1.0",
  "description": "A simple way to hide Taboola ads",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
